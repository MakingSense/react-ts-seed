{
  "name": "react-ts-seed",
  "version": "0.1.0",
  "private": true,
  "pre-commit": [
    "lint",
    "test"
  ],
  "scripts": {
    "start": "yarn start:dev",
    "start:local": "dotenv -e ./src/config/.env.local react-scripts start",
    "start:dev": "dotenv -e ./src/config/.env.development react-scripts start",
    "start:qa": "dotenv -e ./src/config/.env.qa react-scripts start",
    "build": "yarn build:production",
    "build:development": "dotenv -e ./src/config/.env.development react-scripts build",
    "build:qa": "dotenv -e ./src/config/.env.qa react-scripts build",
    "build:stage": "dotenv -e ./src/config/.env.stage react-scripts build",
    "build:production": "dotenv -e ./src/config/.env.production react-scripts build",
    "test": "dotenv -e ./src/config/.env.test cross-env react-scripts test --env=jsdom -- --coverage",
    "lint": "tslint -c ./tslint.json 'src/**/*.{ts,tsx}'",
    "eject": "react-scripts eject",
    "analyze": "source-map-explorer build/static/js/main.* --html > tree.html && google-chrome tree.html"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/registerServiceWorker.ts",
      "!src/modules/state-mgmt/store.ts",
      "!src/modules/state-mgmt/EpicRegistry.ts",
      "!src/modules/state-mgmt/ReducerRegistry.ts",
      "!src/modules/AppRoot.tsx",
      "!src/test/**/*.*",
      "!src/**/index.{ts,tsx}"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ]
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "connected-react-router": "^4.5.0",
    "cross-env": "^5.2.0",
    "pre-commit": "^1.2.2",
    "react": "^16.8.1",
    "react-dom": "^16.6.3",
    "react-lazy-route": "^0.1.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.5",
    "react-test-renderer": "^16.5.2",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.5",
    "redux-observable": "^1.0.0",
    "rxjs": "^6.3.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/history": "^4.7.0",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.0",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.6.3",
    "@types/react-redux": "^6.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-test-renderer": "^16.0.2",
    "@types/redux": "^3.6.0",
    "@types/redux-devtools-extension": "^2.13.2",
    "dotenv-cli": "^1.4.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "source-map-explorer": "^1.6.0",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3333",
    "yarn": "^1.10.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
